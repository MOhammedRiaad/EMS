# =============================================================================
# EMS Studio - Environment Configuration
# =============================================================================
# Copy this file to .env and update values as needed

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=ems_user
POSTGRES_PASSWORD=ems_secret
POSTGRES_DB=ems_studio
POSTGRES_PORT=5432
DATABASE_URL=postgresql://ems_user:ems_secret@localhost:5432/ems_studio

# -----------------------------------------------------------------------------
# Redis (Job Queue & Caching)
# -----------------------------------------------------------------------------
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# MinIO (S3-Compatible Object Storage)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minio_user
MINIO_ROOT_PASSWORD=minio_secret
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET=ems-files

# -----------------------------------------------------------------------------
# MailDev (Development Email Server)
# -----------------------------------------------------------------------------
MAILDEV_WEB_PORT=1080
MAILDEV_SMTP_PORT=1025
SMTP_HOST=localhost
SMTP_PORT=1025

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:3000/api
